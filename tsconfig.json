{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "module": "commonjs",
    "outDir": "lib",
    "rootDir": "src",
    "strict": true,
    "target": "es2017",
    "sourceMap": true,
    "skipLibCheck": true,
    "resolveJsonModule":true,
    "allowJs": true,
  },
  "include": [
    "src/**/*",
  ],
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "__mocks__",
    "coverage",
    "*.config.js",
    "*.babel.js",
    "specs",
    "templates"
  ],
  "types" : ["mocha"]
}
