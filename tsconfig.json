{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": true,
    "importHelpers": true,
    "module": "commonjs",
    "outDir": "lib",
    "rootDir": "src",
    "strict": true,
    "target": "es2017",
    "composite": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "resolveJsonModule":true
  },
  "include": [
    "src/**/*",
    "package.json"
  ],
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "__mocks__",
    "coverage",
    "*.config.js",
    "*.babel.js",
    "specs"
  ],
  "types" : ["mocha"]
}
